# Development Environment Configuration
# Copy this file to .env and customize the values

# Database Configuration
DATABASE_URL=mysql://hexago_user:hexago_password@localhost:3306/hexago_dev
DATABASE_MAX_CONNECTIONS=25
DATABASE_CONN_MAX_LIFETIME=5m
DATABASE_MAX_IDLE_CONNECTIONS=5

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_CONN_MAX_IDLE_TIME=5m
REDIS_PASSWORD=

# gRPC Server Configuration
GRPC_PORT=8080
GRPC_HOST=0.0.0.0
GRPC_TIMEOUT=30s
GRPC_MAX_RECV_MSG_SIZE=4194304
GRPC_MAX_SEND_MSG_SIZE=4194304

# Binance API Configuration
BINANCE_WEBSOCKET_URL=wss://stream.binance.com:9443/ws/
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
BINANCE_TESTNET=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=text  # text or json
LOG_OUTPUT=stdout  # stdout, stderr, or file path

# Application Configuration
SUPPORTED_SYMBOLS=BTCUSDT,ETHUSDT,PEPEUSDT
OHLC_INTERVAL=60s
TICK_BUFFER_SIZE=1000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics